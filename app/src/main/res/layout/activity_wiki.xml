<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:fitsSystemWindows="true"
    tools:context="com.swg_games_lab.nanicki.artguide.attraction_info.WikiActivity">

   <!-- <include layout="@layout/toolbar" />-->

   <!-- <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/toolbar" />

        </android.support.design.widget.AppBarLayout>-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/wiki_bt_museum"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/wiki_button_background_blue"
            android:text="музеи" />

        <Button
            android:id="@+id/wiki_bt_theatre"
            android:layout_toRightOf="@id/wiki_bt_museum"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/wiki_button_background_blue"
            android:text="театры" />

        <Button
            android:id="@+id/wiki_bt_memorial"
            android:layout_toRightOf="@id/wiki_bt_theatre"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/wiki_button_background_blue"
            android:text="памятники" />

        <Button
            android:id="@+id/wiki_bt_stadium"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/wiki_bt_memorial"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/wiki_button_background_blue"
            android:text="стадион" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
