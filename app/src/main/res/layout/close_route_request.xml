<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/close_request_image"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/museum_voen_istr_aksay_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/close_request_title"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:gravity="center"
        android:text="Отменить маршрут?"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="16dp"
        app:autoSizeMinTextSize="10dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/close_request_close"
        app:layout_constraintEnd_toStartOf="@+id/close_request_close"
        app:layout_constraintStart_toEndOf="@id/close_request_image"
        app:layout_constraintTop_toTopOf="@+id/close_request_close" />


    <ImageView
        android:id="@+id/close_request_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/close_sign" />

    <Button
        android:id="@+id/close_request_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ripple_green"
        android:text="Да"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="@+id/close_request_walk_image"
        app:layout_constraintEnd_toStartOf="@+id/close_request_walk_image"
        app:layout_constraintStart_toEndOf="@+id/close_request_image"
        app:layout_constraintTop_toTopOf="@+id/close_request_walk_image" />
    
    <ImageView
        android:id="@+id/close_request_walk_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:visibility="visible"
        android:src="@drawable/man_walk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/close_request_image"
        app:layout_constraintTop_toBottomOf="@+id/close_request_title" />

    <Button
        android:id="@+id/close_request_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ripple_green"
        android:text="Нет"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="@+id/close_request_walk_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/close_request_walk_image"
        app:layout_constraintTop_toTopOf="@+id/close_request_walk_image" />


</androidx.constraintlayout.widget.ConstraintLayout>